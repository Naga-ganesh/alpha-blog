<h3 class="text-center">Showing new article creation form page here</h3>
<% if @article.errors.any? %> 
    
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">The following errors prevented the article from being saved</h4>
        <p>
            <ul> 
                <% @article.errors.full_messages.each do |err| %> 
                    <li><%= err %></li> 
                <% end %> 
            </ul>
        </p>
    </div>
<% end %>


<%= render 'articles/form' %>

<%= link_to 'Articles Listing Page', articles_path%>