<%=form_with(model: @article, local: true) do |f| %>
  <div class="form-group row">
        <%=f.label :title, class: "col-sm-2 col-form-label"%><br/>
    <div class="col-sm-10">
        <%=f.text_field :title %>
    </div>
  <div class="form-group row">
        <%=f.label :description, class: "col-sm-2 col-form-label"%>
    <div class="col-sm-10">
        <%=f.text_area :description%>
    </div>
  </div>
  <%=f.submit%>

<%end%>