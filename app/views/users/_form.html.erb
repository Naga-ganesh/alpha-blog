<div class="container mt-4">
  <%=form_with(model: @user, local: true) do |f| %>
    <div class="form-group row">
          <%=f.label :username, class: "col-sm-2 col-form-label"%><br/>
      <div class="col-sm-10">
          <%=f.text_field :username , placeholder: "Enter a username" %>
      </div>
    <div class="form-group row">
          <%=f.label :email, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
          <%=f.email_field :email, placeholder: "Enter a email"%>
      </div>
    </div>
    <div class="form-group row">
          <%=f.label :password, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
          <%=f.password_field :password, placeholder: "Enter a password"%>
      </div>
    </div>
    <%=f.submit "signup" %>
  
  <%end%>
</div>