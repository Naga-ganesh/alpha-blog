<div class="container mt-4">
  <% if @category.errors.any? %>
    <% @category.errors.full_messages do |err| %>
      <%= err%>
    <%end%>
  <%end%>
  <%=form_with(model: @category, local: true) do |f| %>
    <div class="form-group row">
          <%=f.label :name, "Category Name", class: "col-sm-2 col-form-label"%><br/>
      <div class="col-sm-10">
          <%=f.text_field :name , placeholder: "Enter a name" %>
      </div>
    <%=f.submit "Create Category" %>
  
  <%end%>
</div>